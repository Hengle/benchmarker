{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"name": "pbot-master",
	"labels": {
	    "app": "pbot-master"
	}
    },
    "spec": {
	"replicas": 1,
	"template": {
	    "metadata": {
		"labels": {
		    "app": "pbot-master"
		}
	    },
	    "spec": {
		"containers": [
		    {
			"name": "pbot-master",
			"image": "633007691302.dkr.ecr.us-east-1.amazonaws.com/pbot-master:latest",
			"volumeMounts": [
			    {
				"mountPath": "/ebs",
				"name": "ebs"
			    }
			]
		    }
		],
		"volumes": [
		    {
			"name": "ebs",
			"hostPath": {
			    "path": "/ebs"
			}
		    }
		],
		"imagePullSecrets": [
		    {
			"name": "registry"
		    }
		]
	    }
	}
    }
}
